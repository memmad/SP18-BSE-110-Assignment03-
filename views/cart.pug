extends layout

block content
  h1 My shopping Cart
  - var total=0;
    table.table
      thead
        th Name
        th Price
        th Description
        th Actions
      tbody
        each item in cart
          - total += Number(item.Price)
          tr
            td=item.name
            td=item.Price
            td=item.Description
            td
              a(href="/products/cart/remove/"+item._id, class="btn btn-danger") Remove Item
      tfoot
        tr
          td Total
          td=total