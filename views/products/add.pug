extends ../layout

block content
    h1 Add New Product
    form(action="/products/add", method="post")
        .form-group
            label(for="name") Product Name
            input#name(type="text", class="form-control", placeholder="Name", name="name")
        .form-group
            label(for="Price") Product Price
            input#Price(type="text", class="form-control", placeholder="Price", name="Price")
        .form-group
            label(for="Description") Product Description
            textarea#Description(name="Description", class="form-control",cols="30", rows="10", placeholder="Description")    
        input(type="submit", class="btn btn-info")    